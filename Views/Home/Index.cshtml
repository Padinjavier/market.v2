@{
    ViewData["Title"] = "Market v2.0";
}

<div class="container mt-4">

    <!-- HERO -->
    <section class="text-center mb-5">
        <h1 class="fw-bold">Market v2.0</h1>
        <p class="text-muted">
            Sistema de ventas en línea para compras rápidas, seguras y eficientes en Quilmaná.
        </p>
    </section>

    <!-- IMÁGENES PEQUEÑAS -->
    <section class="row mb-5">
        <div class="col-md-6 mb-3">
            <img src="https://img.freepik.com/foto-gratis/vista-cerca-carro-compra-sobrecargado-comida-mientras-que-fondo-persona-femenina-elige-productos_342744-1133.jpg?t=st=1769233136~exp=1769236736~hmac=97f48b8071df6289366b534f92c902580a4c47f0508478057e476172c26efe94"
                 class="img-fluid rounded shadow-sm"
                 alt="Compras en línea">
        </div>
        <div class="col-md-6 mb-3">
            <img src="https://img.freepik.com/foto-gratis/mujer-telefono-inteligente-supermercado-pie-junto-estantes-llenos-fruta-tienda-sosteniendo-pulgares-arriba_342744-1091.jpg?t=st=1769233191~exp=1769236791~hmac=5062b412183fb05a12f4bd51eabd2e28bc0849f5d2718ad6a813e8a8e95c0c73"
                 class="img-fluid rounded shadow-sm"
                 alt="Cliente satisfecho">
        </div>
    </section>

    <!-- FUNCIONALIDADES -->
    <section class="row text-center mb-5">
        <div class="col-md-4">
            <i class="bi bi-box-seam fs-1 text-primary"></i>
            <h4 class="mt-2">Gestión de Productos</h4>
            <p>Registro, edición y control de stock en tiempo real.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-cart-check fs-1 text-success"></i>
            <h4 class="mt-2">Ventas en Línea</h4>
            <p>Carrito de compras, pedidos y seguimiento del estado.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-shield-lock fs-1 text-danger"></i>
            <h4 class="mt-2">Seguridad</h4>
            <p>Protección de datos y transacciones seguras.</p>
        </div>
    </section>

    <!-- SECCIÓN OBJETIVO -->
    <section class="mb-5">
        <h2 class="text-center mb-3">Objetivo del Sistema</h2>
        <p class="text-center text-muted">
            Modernizar la gestión del minimarket mediante la automatización de ventas,
            inventario y atención al cliente, mejorando la eficiencia operativa y la experiencia del usuario.
        </p>
    </section>

    <!-- SECCIÓN BENEFICIOS -->
    <section class="row text-center mb-5">
        <div class="col-md-3">
            <i class="bi bi-speedometer2 fs-2"></i>
            <h5 class="mt-2">Rapidez</h5>
            <p>Procesos optimizados y respuestas rápidas.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-graph-up fs-2"></i>
            <h5 class="mt-2">Crecimiento</h5>
            <p>Aumento de ingresos y control de ventas.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-people fs-2"></i>
            <h5 class="mt-2">Clientes</h5>
            <p>Mejor experiencia y fidelización.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-phone fs-2"></i>
            <h5 class="mt-2">Accesibilidad</h5>
            <p>Compra desde cualquier dispositivo.</p>
        </div>
    </section>

</div>
