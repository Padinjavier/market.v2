<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - market</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/market.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    
    <style>

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://cdn-icons-png.flaticon.com/512/3081/3081559.png"
                         alt="Market Logo" 
                         class="navbar-logo">
                    Market
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Nosotros">Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Categorias">Categorías</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            @using market.Helpers
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>
                                @if (Context.Session.GetString("UserId") != null)
                                {
                                    @("Hola, " + (Context.Session.GetString("FirstName") ?? Context.Session.GetString("UserName")))
                                }
                                else
                                {
                                    @:Cuenta
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @if (Context.Session.GetString("UserId") != null)
                                {
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Mi cuenta</a></li>

                                    @* Mostrar enlace de administración según permisos (escalable por módulo) *@
                                    @if (PermissionHelper.HasPermission(Context, "dashboard", "read"))
                                    {
                                        <li><a class="dropdown-item" href="/Admin"><i class="bi bi-gear me-2"></i>Administrar</a></li>
                                    }

                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-action="Logout" asp-controller="Account" method="post" style="display: inline;">
                                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar sesión
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Register">
                                            <i class="bi bi-person-plus me-2"></i>Registrate
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Login Modal Mejorado -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <img src="https://cdn-icons-png.flaticon.com/512/3081/3081559.png" 
                         alt="Market Logo" 
                         class="login-logo">
                    <h5 class="modal-title" id="loginModalLabel">Bienvenido a Market</h5>
                    <p class="text-white-50 mb-0 small">Ingresa a tu cuenta para continuar</p>
                </div>
                <div class="modal-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <form asp-action="Login" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope me-1"></i>Correo Electrónico
                            </label>
                            <input type="email" 
                                   class="form-control" 
                                   id="email" 
                                   name="email" 
                                   placeholder="tu@email.com"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-lock me-1"></i>Contraseña
                            </label>
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                                   placeholder="••••••••"
                                   required>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Recordarme
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-login">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                        </button>
                    </form>
                    
                    <div class="forgot-password">
                        <a href="#">¿Olvidaste tu contraseña?</a>
                    </div>
                    
                    <div class="divider">
                        <span>O continúa con</span>
                    </div>
                    
                    <div class="social-login">
                        <button class="social-btn">
                            <i class="bi bi-google text-danger fs-4"></i>
                        </button>
                        <button class="social-btn">
                            <i class="bi bi-facebook text-primary fs-4"></i>
                        </button>
                        <button class="social-btn">
                            <i class="bi bi-apple fs-4"></i>
                        </button>
                    </div>
                    
                    <div class="register-link">
                        <p class="mb-0">
                            ¿No tienes una cuenta? 
                            <a asp-area="" asp-controller="Home" asp-action="Register" class="text-decoration-none fw-bold" style="color: #667eea;">
                                Regístrate aquí
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
<!-- FOOTER MEJORADO -->
<footer class="bg-dark text-light pt-5 pb-4 mt-5">
    <div class="container">
        <div class="row">
            <!-- Columna 1: Sobre nosotros -->
            <div class="col-md-3 mb-4">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-shop text-primary"></i> Market v2.0
                </h5>
                <p class="small">
                    Tu minimarket digital de confianza en Quilmaná. 
                    Calidad, servicio y comodidad en cada compra.
                </p>
                <div class="mt-3">
                    <a href="#" class="text-light me-3 fs-5"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-light me-3 fs-5"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-light me-3 fs-5"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-light me-3 fs-5"><i class="bi bi-whatsapp"></i></a>
                    <a href="#" class="text-light fs-5"><i class="bi bi-youtube"></i></a>
                </div>
            </div>

            <!-- Columna 2: Enlaces rápidos -->
            <div class="col-md-3 mb-4">
                <h5 class="fw-bold mb-3">Enlaces Rápidos</h5>
                <ul class="list-unstyled ">
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-chevron-right"></i> Inicio</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-chevron-right"></i> Productos</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-chevron-right"></i> Ofertas</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-chevron-right"></i> Mi Cuenta</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-chevron-right"></i> Contacto</a></li>
                </ul>
            </div>

            <!-- Columna 3: Información legal -->
            <div class="col-md-3 mb-4">
                <h5 class="fw-bold mb-3">Información Legal</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-white"><i class="bi bi-shield-lock"></i> Política de Privacidad</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-file-text"></i> Términos y Condiciones</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-arrow-clockwise"></i> Política de Devoluciones</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-credit-card"></i> Métodos de Pago</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none text-white"><i class="bi bi-question-circle"></i> Preguntas Frecuentes</a></li>
                </ul>
            </div>

            <!-- Columna 4: Contacto -->
            <div class="col-md-3 mb-4">
                <h5 class="fw-bold mb-3">Contáctanos</h5>
                <ul class="list-unstyled small">
                    <li class="mb-2">
                        <i class="bi bi-geo-alt text-primary me-2"></i>
                        Av. Principal 123, Quilmaná
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-telephone text-primary me-2"></i>
                        +51 999 888 777
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-envelope text-primary me-2"></i>
                        ventas@market.com
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-clock text-primary me-2"></i>
                        Lun - Sáb: 8am - 10pm
                    </li>
                </ul>
                <div class="mt-3">
                    <h6 class="small fw-bold">Métodos de Pago</h6>
                    <i class="bi bi-credit-card fs-4 me-2"></i>
                    <i class="bi bi-wallet2 fs-4 me-2"></i>
                    <i class="bi bi-phone fs-4"></i>
                </div>
            </div>
        </div>

        <hr class="border-secondary my-4">

        <!-- Copyright -->
        <div class="row">
            <div class="col-md-6 text-center text-md-start">
                <p class="small mb-0">
                    &copy; 2025 Market v2.0. Todos los derechos reservados.
                </p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <p class="small mb-0">
                    Desarrollado con <i class="bi bi-heart-fill text-danger"></i> en Quilmaná, Perú
                </p>
            </div>
        </div>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>